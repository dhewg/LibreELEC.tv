SRCDIR="$BUILD/image/system/usr/share/bootloader"

mkdir -p $RELEASE_DIR/3rdparty/bootloader
  if [ -n "$UBOOT_SYSTEM" ]; then
    cp -a $SRCDIR/u-boot-sunxi-with-spl.bin $RELEASE_DIR/3rdparty/bootloader
  fi

  cp -a $SRCDIR/sun50i-h6-*.dtb $RELEASE_DIR/3rdparty/bootloader
