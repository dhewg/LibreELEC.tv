SRCDIR="$BUILD/image/system/usr/share/bootloader"

mkdir -p $RELEASE_DIR/3rdparty/bootloader
  if [ -n "$UBOOT_SYSTEM" ]; then
    cp -a $SRCDIR/u-boot.img $RELEASE_DIR/3rdparty/bootloader
    cp -a $SRCDIR/SPL $RELEASE_DIR/3rdparty/bootloader
  fi

  cp -a $SRCDIR/*.dtb $RELEASE_DIR/3rdparty/bootloader
