SRCDIR="$BUILD/image/system/usr/share/bootloader"

mkdir -p $RELEASE_DIR/3rdparty/bootloader
  if [ -n "$UBOOT_SYSTEM" ]; then
    if [ -f $SRCDIR/idbloader.img ]; then
      cp -a $SRCDIR/idbloader.img $RELEASE_DIR/3rdparty/bootloader
    fi
    if [ -f $SRCDIR/uboot.img ]; then
      cp -a $SRCDIR/uboot.img $RELEASE_DIR/3rdparty/bootloader
    fi
    if [ -f $SRCDIR/trust.img ]; then
      cp -a $SRCDIR/trust.img $RELEASE_DIR/3rdparty/bootloader
    fi
  fi

  DTB_PREFIX="${DEVICE/RK/rk}-"
  for dtb in $SRCDIR/$DTB_PREFIX*.dtb $SRCDIR/rockchip/$DTB_PREFIX*.dtb; do
    if [ -f $dtb ]; then
      cp -a $dtb $RELEASE_DIR/3rdparty/bootloader
    fi
  done
